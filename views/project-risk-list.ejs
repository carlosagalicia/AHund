<h3>Riesgos más Críticos</h3>

<% if (risks.length > 0) { %>
<ul class="list">
  <% risks.slice(0, 3).forEach(function (risk, index) { %>
  <li class="list-item border-bottom">
    <div class="list-item-description">
      <div
        class="circle <%= (index === 0) ? 'red' : (index === 1) ? 'yellow' : 'green' %>"
      ></div>
      <div class="list-item-counter"><%= risk.PonderacionRelativa %></div>
      <p><%= risk.Nombre %></p>
    </div>
  </li>
  <% }); %>
</ul>
<% } else { %>
<ul class="list">
  <li class="list-item border-bottom">
    <div class="list-item-description">
      <p>Aún no existen riesgos en el proyecto</p>
    </div>
  </li>
</ul>
<% } %>
