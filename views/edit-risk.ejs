<div class="risk-header" id="editRiskHeader">
  <h2>Editando Riesgo</h2>
</div>
<form
  class="risk-description"
  id="riskForm"
  method="post"
  action="/risks/edit-risk"
>
  <input type="hidden" name="_csrf" id="csrfToken" value="<%= csrfToken %>" />
  <input type="hidden" name="riskId" id="riskId" value="<%= risk.IDRiesgo %>" />

  <div class="description-header">
    <h3>Nombre</h3>
  </div>
  <div class="description">
    <input
      type="text"
      name="nombreRiesgo"
      id="nombreRiesgo"
      placeholder="Nombre del Riesgo"
      value="<%= risk.Nombre %>"
      required
    />
  </div>

  <div class="description-header">
    <h3>Tipo de Riesgo</h3>
  </div>
  <div class="description">
    <input
      type="text"
      name="tipo"
      id="tipo"
      placeholder="Clasificación"
      value="<%= risk.Tipo %>"
      required
    />
  </div>

  <div class="description-header">
    <h3>Descripción</h3>
  </div>
  <div class="description">
    <div class="wrapper">
      <textarea
        name="descripcion"
        id="descripcion"
        placeholder="Descripción del Riesgo (max 512 caracteres)"
        maxlength="512"
        required
      ><%= risk.Descripcion %></textarea>
      <div class="c-wrap">
        <span id="charCount">512</span> caracteres restantes
      </div>
    </div>
  </div>
  <div class="button-container">
    <button type="button" onclick="validateRiskForm()" class="submitRiskButton">
      Guardar
    </button>
  </div>
</form>
